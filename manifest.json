{
  "name": "__MSG_applicationTitle__",
  "description": "__MSG_applicationDescription__",
  "version": "1.3.1",
  "manifest_version": 2,

  "browser_specific_settings": {
    "gecko": {
      "id": "ermachenya.al@gmail.com",
      "strict_min_version": "57.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "/images/16x16.png",
      "32": "/images/32x32.png",
      "48": "/images/48x48.png",
      "128": "/images/128x128.png"
    },
    "default_title": "scaner",
    "default_popup": "/html/popup.html" 
  },

  "icons": {
    "16": "/images/16x16.png",
    "32": "/images/32x32.png",
    "48": "/images/48x48.png",
    "128": "/images/128x128.png"
  },
  
  "content_scripts": [
    {
      "js": ["js/modules/HttpRequest.js", "js/modules/global_last.js", "js/modules/economy_common_last.js", "js/skaner.js"],
      "css": ["css/page-order.css"],
      "matches": [ "*://steamcommunity.com/market*" ],
      "run_at": "document_idle"
    },
    {
      "js": ["js/modules/HttpRequest.js", "js/profitPage.js", "js/modules/global_last.js", "js/modules/economy_common_last.js"],
      "css": ["css/page-order.css"],
      "matches": [ "*://steamcommunity.com/market/listings/*" ],
      "run_at": "document_idle"
  },
  {
    "js": ["js/modules/HttpRequest.js", "js/gamePage.js", "js/modules/global_last.js", "js/modules/economy_common_last.js", "js/modules/activation.js"],
    "css": ["css/page-order.css"],
    "matches": [ "*://store.steampowered.com/app/*" ],
    "run_at": "document_idle"
}  

  ], 
  "web_accessible_resources": ["js/modules/global_last.js", "js/modules/economy_common_last.js", "js/modules/activation.js"], 

  "default_locale": "en", 
  "permissions": ["*://steamcommunity.com/*", "*://localhost/*", "storage", "activeTab", "tabs"]

}